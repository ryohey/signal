{
  "name": "pipedream-2.0",
  "version": "0.0.1",
  "description": "PipeDream 2.0 - A simple and enjoyable music creation tool with AI assistance.",
  "scripts": {
    "start": "turbo run dev --parallel",
    "build": "npm run build:app",
    "build:app": "turbo build && cpy \"app/dist/**/*\" dist --parents",
    "serve": "npx http-server dist",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "turbo format",
    "clean:ports": "lsof -ti:5173,8000 | xargs kill -9 2>/dev/null || echo 'Ports 5173 and 8000 are clear'",
    "clean:backend": "pkill -f 'uvicorn.*app.main' 2>/dev/null || echo 'No backend processes found'",
    "clean": "npm run clean:ports && npm run clean:backend",
    "firebase": "npm --prefix functions run build && firebase emulators:start",
    "firebase:deploy": "firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryohey/signal.git"
  },
  "author": "ryohey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryohey/signal/issues"
  },
  "homepage": "https://github.com/ryohey/signal/",
  "private": true,
  "devDependencies": {
    "cpy-cli": "^4.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.2"
  },
  "workspaces": [
    "app",
    "packages/*"
  ],
  "packageManager": "npm@11.3.0",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "firebase": "12.6.0",
    "optics-ts": "^2.4.1",
    "spessasynth_lib": "^4.0.19",
    "vite": "7.2.7"
  }
}
